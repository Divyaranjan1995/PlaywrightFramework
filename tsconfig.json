{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "@playwright/test"],
    "resolveJsonModule": true,
    "paths": {
      "@e2e/*": ["e2e/*"],
      "@pages/*": ["e2e/pages/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
